<Window x:Class="TurtleTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel x:Name="stackAll" Width="200" HorizontalAlignment="Left" Margin="8">
            <TextBox x:Name="txtIP" Text="10.2.230.124" Margin="2"/>
            <TextBox x:Name="txtPort" Text="9090" Margin="2"/>
            <Button x:Name="btnConnect" Click="btnConnect_Click" Content="Connect" Background="OrangeRed" Margin="2"/>
            <StackPanel x:Name="stackControls" Margin="8">
                <Button x:Name="btnSubscribe" Click="btnSubscribe_Click" Content="Subcribe"/>
                <Button x:Name="btnForward" Click="btnForward_Click" Content="Forward"/>
                <Button x:Name="btnBackward" Click="btnBackward_Click" Content="Backward"/>
                <Button x:Name="btnLeft" Click="btnLeft_Click" Content="Left"/>
                <Button x:Name="btnRight" Click="btnRight_Click" Content="Right"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

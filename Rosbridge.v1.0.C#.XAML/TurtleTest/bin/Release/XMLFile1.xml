<?xml version="1.0" encoding="utf-8" ?>
<rosbridge_config>
  <network ipaddress="192.168.0.151" port="9090" protocol="ws"/>
  <subscriptions>
    <topic name="/sick_s300/scan"/>
    <topic name="/DriveStates"/>
    <topic name="/odom"/>
  </subscriptions>
  <publications>
    <topic name="/DriveCommands" target="neobotix_mp500"/>
  </publications>
  <projections>
    <query topic="/DriveStates" attribute="angularPosition"/>
    <query topic="/DriveStates" attribute="angularVelocity"/>
    <query topic="/scan_front" attribute="ranges"/>
  </projections>
  <visualization>
    <scale r="20.0"/>
    <laser_field topic="/sick_s300/scan"/>
    <odometry topic="/odom"/>
    <showState topic="/DriveStates"/>
  </visualization>
  <velocity>
    <linear>
      <threshold max="0.5" min="-0.5"/>
      <setup increment="0.1" init="0.1"/>
    </linear>
    <angular>
      <threshold max="15.0" min="-15.0"/>
      <setup increment="1" init="10"/>
    </angular>
  </velocity>
</rosbridge_config>
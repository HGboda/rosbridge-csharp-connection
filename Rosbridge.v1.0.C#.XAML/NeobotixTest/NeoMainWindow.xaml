<Window x:Class="NeobotixTest.NeoMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neobotix" Height="663.454" Width="948.092">
    <Grid>
        <StackPanel x:Name="stackAll" Width="200" HorizontalAlignment="Left" Margin="8">
            <TextBox x:Name="txtIP" Text="192.168.0.152" Margin="2"/>
            <TextBox x:Name="txtPort" Text="9090" Margin="2"/>
            <Button x:Name="btnConnect" Click="btnConnect_Click" Content="Connect" Background="OrangeRed" Margin="2"/>
            <StackPanel x:Name="stackControls" Margin="8">
                <Button x:Name="btnSubscribe" Click="btnSubscribe_Click" Content="Subcribe" Margin="2"/>
                <Button x:Name="btnForward" Click="btnForward_Click" Content="Forward" Margin="2"/>
                <Button x:Name="btnBackward" Click="btnBackward_Click" Content="Draw" Margin="2"/>
                <Button x:Name="btnClear" Click="btnClear_Click_1" Content="Clear" Margin="2"/>
                <Label x:Name="labelX"  Content="l" />
            </StackPanel>
        </StackPanel>
        <Canvas x:Name="canvLaser" Background="LightYellow" HorizontalAlignment="Left" Height="395" Margin="277,202,0,0" VerticalAlignment="Top" Width="569"/>
    </Grid>
</Window>
